<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".settings">

  <androidx.appcompat.widget.SwitchCompat

      android:id="@+id/switchcolor2"
      android:layout_width="347dp"
      android:layout_height="58dp"
      android:layout_marginTop="68dp"
      android:background="@color/blue"
      android:paddingLeft="5dp"
      android:text="Sound"
      android:textColor="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2"
      app:thumbTint="@color/bloodred"
      app:trackTint="@color/white"
      tools:ignore="InvalidId">

  </androidx.appcompat.widget.SwitchCompat>

  <androidx.appcompat.widget.SwitchCompat

      android:id="@+id/switchcolor3"
      android:layout_width="347dp"
      android:layout_height="58dp"
      android:layout_marginTop="16dp"
      android:background="@color/blue"
      android:text="Notifications"
      app:thumbTint="@color/bloodred"
      app:trackTint="@color/white"
      android:paddingLeft="5dp"
      android:textColor="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/switchcolor1"
      tools:ignore="InvalidId">

  </androidx.appcompat.widget.SwitchCompat>

  <androidx.appcompat.widget.SwitchCompat

      android:id="@+id/switchcolor1"
      android:layout_width="347dp"
      android:layout_height="58dp"
      android:layout_marginTop="16dp"
      android:background="@color/blue"
      android:text="Phone"
      app:thumbTint="@color/bloodred"
      android:paddingLeft="5dp"
      android:textColor="@color/white"
      app:trackTint="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/switchcolor2"
      tools:ignore="InvalidId">

  </androidx.appcompat.widget.SwitchCompat>

  <TextView
      android:id="@+id/textView2"
      android:layout_width="126dp"
      android:layout_height="43dp"


      android:layout_marginTop="100dp"
      android:background="@drawable/textbox"
      android:gravity="center"
      android:text="SETTINGS"

      android:textAlignment="center"


      android:textColor="@color/white"
      android:textSize="18dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
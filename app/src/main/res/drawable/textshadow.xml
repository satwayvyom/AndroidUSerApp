<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="12dp" />
        </shape>
    </item>

    <item
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"
